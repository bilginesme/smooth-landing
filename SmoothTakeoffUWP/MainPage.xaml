                </MenuFlyoutSubItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Close" Tag="&#xE8BB;" Style="{StaticResource MenuFlyoutItemIconTemplate}" Click="MenuItemClose_Click"/>
            </MenuFlyout>
        </StackPanel.ContextFlyout>
    </StackPanel>

</Page>


